global:
  scrape_interval: 10s

scrape_configs:
  - job_name: 'prometheus'
    scrape_interval: 5s
    static_configs:
      - targets: ['localhost:{{ prom_port }}']

  - job_name: 'node_exporter'
    scrape_interval: 5s
    static_configs:
      - targets: ['localhost:{{ exporter_port }}']

  - job_name: 'iota_exporter'
    scrape_interval: 5s
    static_configs:
      - targets: ['localhost:{{ iota_prom_exporter_port }}']
